<%-include('up')%>
<%-include('error_msg')%>
<div class="row margin-top">
	<div class="container-fluid">
		<img src="/images/venues/<%=venue.id%>.jpg" alt="Banquet Image" class="img-thumbnail img-responsive" width="100%" style="height:400px;object-fit:cover">
		<div class="container">
			<h2><%=venue.name%></h2>
			<span class="col-sm-6">
				<p><%=venue.description%></p>
			</span>
			<%if(user) {%>
				<div class="pull-right">
					<form class="form-horizontal" role="form" action="/users/<%=user.id%>/v/<%=venue.id%>" method="post">
						<input type="hidden" name="_csrf" value="<%=csrf_token%>">
						<div class="form-group">
							<input type="date" name="booking_date" class="form-control">
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-lg btn-default">Book This Venue</button>
							</div>
						</div>
					</form>
				</div>
			<% } %>
		</div>
	</div>
</div>
<%-include('down')%>
