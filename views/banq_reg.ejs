<%-include('up')%>
<%-include('error_msg')%>
<div class="row margin-top">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h1 class="color-white">Register Your Banquet</h1>
            </div>
            <div class="panel-body">
                <form action="/users/<%=user.id%>/b/new" method="post" class="form-horizontal">
                    <input type="hidden" name="_csrf" value="<%=csrf_token%>">
                    <div class="form-group">
                        <label for="name" class="control-label col-sm-2">Banquet Name: </label>
                        <div class="col-sm-10">
                            <input type="text" name="b_name" class="form-control" autofocus required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="loc" class="control-label col-sm-2">Location: </label>
                        <div class="col-sm-10">
                            <input type="text" name="b_loc" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="city" class="control-label col-sm-2">City: </label>
                        <div class="col-sm-10">
                            <input type="text" name="city" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="b_phone" class="control-label col-sm-2">Phone: </label>
                        <div class="col-sm-10">
                            <input type="text" name="b_phone" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="capacity" class="control-label col-sm-2">Capacity: </label>
                        <div class="col-sm-10">
                            <input type="number" name="capacity" class="form-control" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="adv_pay" class="control-label col-sm-2">Advance Payment: </label>
                        <div class="col-sm-10">
                            <input type="number" name="adv_pay" class="form-control" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="total_pay" class="control-label col-sm-2">Total Payment: </label>
                        <div class="col-sm-10">
                            <input type="number" name="total_pay" class="form-control" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="desc" class="control-label col-sm-2">Description:</label>
                        <div class="col-sm-10">
                            <textarea name="b_desc" rows="8" class="form-control"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default pull-right">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%-include('down')%>
